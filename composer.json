{
    "name": "chmez/d8",
    "description": "Profile for Drupal 8.",
    "type": "drupal-profile",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "1.4.0",
        "cweagans/composer-patches": "^1.0",
        "drupal/admin_toolbar": "1.23",
        "drupal/bootstrap": "3.10",
        "drupal/config_override": "1.0-beta2",
        "drupal/config_update": "1.5",
        "drupal/core": "8.4.5",
        "drupal/features": "3.7",
        "drupal/module_filter": "3.1",
        "slowprog/composer-copy-file": "0.2.1",
        "sozarch/bootstrap-sass": "3.3.7"
    },
    "scripts": {
        "post-install-cmd": [
            "SlowProg\\CopyFile\\ScriptHandler::copy"
        ],
        "post-update-cmd": [
            "SlowProg\\CopyFile\\ScriptHandler::copy"
        ]
    },
    "extra": {
        "installer-paths": {
            "modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        },
        "enable-patching": true,
        "patches": {
            "drupal/core": {
                "2916898 - Missing text format: basic_html": "https://www.drupal.org/files/issues/2916898-missing-text-format-basic-html.patch"
            }
        },
        "copy-file": {
            "vendor/sozarch/bootstrap-sass/scss/_variables.scss": "profiles/contrib/d8/themes/custom/d8_theme/sass/"
        }
    }
}
