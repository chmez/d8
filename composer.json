{
    "name": "chmez/d8",
    "description": "Profile for Drupal 8.",
    "type": "drupal-profile",
    "license": "GPL-2.0+",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "cweagans/composer-patches": "^1.0",
        "drupal/core": "8.4.0",
        "drupal/admin_toolbar": "1.20",
        "drupal/config_update": "1.4",
        "drupal/features": "3.5",
        "drupal/module_filter": "3.1",
        "drupal/bootstrap": "3.6",
        "composer/installers": "1.4.0"
    },
    "extra": {
        "installer-paths": {
            "modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        },
        "enable-patching": true,
        "patches": {
            "drupal/core": {
                "2916898 - Missing text format: basic_html": "https://www.drupal.org/files/issues/2916898-missing-text-format-basic-html.patch"
            }
        }
    }
}
